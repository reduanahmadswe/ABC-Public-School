<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFC00"
    tools:context=".Animal_Activity"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="20"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_gravity="center"
                >

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationview_animal"
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"/>



            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/left_arrow_animal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/left_arrow"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/home_animation_animal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/home_animation" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/right_arrow_animal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/right_arrow"
                tools:ignore="ImageContrastCheck"
                android:layout_marginStart="20dp" />

            <Button
                android:id="@+id/replay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

    </LinearLayout>





</LinearLayout>