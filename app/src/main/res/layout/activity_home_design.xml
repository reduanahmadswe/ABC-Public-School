<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Design_Activity"
    android:background="#FFFC00"
    android:id="@+id/home_design_activity"
    >
     <!-- include tab layout -->
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <!-- Horizontal card view layout start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="visible"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/Alphabets"
                    android:layout_width="120dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/item_shape"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:weightSum="20">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="125dp"
                        android:src="@drawable/alphabets"
                        android:layout_gravity="center"

                        />


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/abckids"
                        android:layout_width="fill_parent"
                        android:layout_height="125dp"
                        app:lottie_rawRes="@raw/abckids"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_centerVertical="true"
                        />





                </LinearLayout>


                <LinearLayout
                    android:id="@+id/Number"
                    android:layout_width="120dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/item_shape"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="125dp"
                            android:src="@drawable/number"
                            android:layout_gravity="center"
                            />


                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/number_animation"
                            android:layout_width="fill_parent"
                            android:layout_height="125dp"
                            app:lottie_rawRes="@raw/number_animation"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:layout_centerVertical="true"
                            />


                     </LinearLayout>


                <LinearLayout
                    android:id="@+id/math"
                    android:layout_width="120dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/item_shape"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:src="@drawable/bird_home"
                        android:layout_gravity="center"
                        />


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/flower_animation"
                        android:layout_width="fill_parent"
                        android:layout_height="125dp"
                        app:lottie_rawRes="@raw/home_flower"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_centerVertical="true"
                        />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/shape"
                    android:layout_width="120dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/item_shape"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="125dp"
                        android:src="@drawable/shape_image"
                        android:layout_gravity="center"
                        />


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/shape_animation"
                        android:layout_width="fill_parent"
                        android:layout_height="125dp"
                        app:lottie_rawRes="@raw/shape_animation"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_centerVertical="true"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/emoji"
                    android:layout_width="120dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/item_shape"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="fill_parent"
                        android:layout_height="125dp"
                        app:lottie_rawRes="@raw/emoji_name_animation"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_centerVertical="true"
                        />


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/emoji_animation"
                        android:layout_width="fill_parent"
                        android:layout_height="125dp"
                        app:lottie_rawRes="@raw/emoji_animation"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_centerVertical="true"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/birds"
                    android:layout_width="120dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/item_shape"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:src="@drawable/bird_home"
                        android:layout_gravity="center"
                        />


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/birds_animation"
                        android:layout_width="fill_parent"
                        android:layout_height="125dp"
                        app:lottie_rawRes="@raw/birds_home_page_animation"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_centerVertical="true"
                        />

                </LinearLayout>





                <LinearLayout
                    android:id="@+id/animal"
                    android:layout_width="120dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/item_shape"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp">


                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:src="@drawable/animal"
                        android:layout_gravity="center"
                        />


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="fill_parent"
                        android:layout_height="125dp"
                        app:lottie_rawRes="@raw/lion"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_centerVertical="true"
                        />

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/clour"
                    android:layout_width="120dp"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/item_shape"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp">


<!--                    <ImageView-->
<!--                        android:layout_width="125dp"-->
<!--                        android:layout_height="125dp"-->
<!--                        android:src="@drawable/animal"-->
<!--                        android:layout_gravity="center"-->
<!--                        />-->


<!--                    <com.airbnb.lottie.LottieAnimationView-->
<!--                        android:layout_width="fill_parent"-->
<!--                        android:layout_height="125dp"-->
<!--                        app:lottie_rawRes="@raw/lion"-->
<!--                        app:lottie_autoPlay="true"-->
<!--                        app:lottie_loop="true"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        />-->



                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:background="@drawable/coler_green"
                        />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/animal"
                        android:layout_gravity="center"
                        />




                </LinearLayout>




            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Horizontal card view layout end -->


   <LinearLayout
       android:id="@+id/setting_layout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/toolbar"
       android:gravity="center"
       android:visibility="gone"
       >

       <androidx.cardview.widget.CardView
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:layout_margin="45dp"
           app:cardCornerRadius="30dp"
           app:cardElevation="20dp"
           >


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="24dp"
               android:gravity="center_horizontal"
               >
               <Switch
                   android:id="@+id/music"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Music"
                   android:textSize="25sp"
                   android:textStyle="bold"
                   tools:ignore="TouchTargetSizeCheck,UseSwitchCompatOrMaterialXml" />


               <Switch
                   android:id="@+id/darkmode"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Dark Mode"
                   android:textSize="25sp"
                   android:textStyle="bold"
                   tools:ignore="TouchTargetSizeCheck,UseSwitchCompatOrMaterialXml" />


               <Button
                   android:id="@+id/ratethisapp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Rate this app"
                   android:textColor="@color/white"
                   android:layout_marginTop="4dp"
                   />


               <LinearLayout
                   android:layout_width="300dp"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2"
                   >

                   <Button
                       android:id="@+id/support"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="Support"
                       android:textColor="@color/white"
                       android:layout_weight="1"
                       android:layout_marginRight="5dp"
                       />

                   <Button
                       android:id="@+id/go_home"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="Home"
                       android:textColor="@color/white"
                       android:layout_weight="1"
                       android:layout_marginLeft="5dp"
                       android:drawableRight="@drawable/exit_to_app"
                       />




               </LinearLayout>

           </LinearLayout>


       </androidx.cardview.widget.CardView>


   </LinearLayout>

   <LinearLayout
        android:id="@+id/exit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:visibility="gone"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="45dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/cancle_exit"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:srcCompat="@drawable/cancel"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancle"
                        android:textColor="#000000"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/ok_exit"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ok_green" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ok"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        />


                </LinearLayout>




            </LinearLayout>




        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>